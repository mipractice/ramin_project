            </items>
        </ToolBar>
        <TableView prefHeight="361.0" prefWidth="600.0" onMouseClicked="#pick" fx:id="countryTb">
            <columns>
                <TableColumn prefWidth="53.0" text="№" fx:id="idTc"/>
                <TableColumn prefWidth="377.0" text="Страна" fx:id="countryTc"/>
            </columns>
        </TableView>
    </children>
